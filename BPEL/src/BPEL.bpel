<?xml version="1.0" encoding="UTF-8" ?>
<process
    name="BPEL"
    targetNamespace="http://enterprise.netbeans.org/bpel/BPEL/BPEL"
    xmlns:tns="http://enterprise.netbeans.org/bpel/BPEL/BPEL"
    xmlns:xs="http://www.w3.org/2001/XMLSchema"
    xmlns:xsd="http://www.w3.org/2001/XMLSchema"
    xmlns="http://docs.oasis-open.org/wsbpel/2.0/process/executable"
    xmlns:sxt="http://www.sun.com/wsbpel/2.0/process/executable/SUNExtension/Trace" 
    xmlns:sxed="http://www.sun.com/wsbpel/2.0/process/executable/SUNExtension/Editor2"
    xmlns:sxat="http://www.sun.com/wsbpel/2.0/process/executable/SUNExtension/Attachment"
    xmlns:sxeh="http://www.sun.com/wsbpel/2.0/process/executable/SUNExtension/ErrorHandling" xmlns:ns0="http://j2ee.netbeans.org/wsdl/BPEL/src/Client" xmlns:ns3="http://rs.udc.es/telco" xmlns:ns1="http://rs.udc.es/rating" xmlns:ns4="http://rs.udc.es/billing" xmlns:ns5="http://docs.oasis-open.org/wsbpel/2.0/process/executable" xmlns:ns6="http://rs.udc.es/reward">
    <import namespace="http://j2ee.netbeans.org/wsdl/BPEL/src/Client" location="Client.wsdl" importType="http://schemas.xmlsoap.org/wsdl/"/>
    <import namespace="http://enterprise.netbeans.org/bpel/BillingServiceWrapper" location="BillingServiceWrapper.wsdl" importType="http://schemas.xmlsoap.org/wsdl/"/>
    <import namespace="http://rs.udc.es/billing" location="BillingService.wsdl" importType="http://schemas.xmlsoap.org/wsdl/"/>
    <import namespace="http://enterprise.netbeans.org/bpel/RatingServiceWrapper" location="RatingServiceWrapper.wsdl" importType="http://schemas.xmlsoap.org/wsdl/"/>
    <import namespace="http://rs.udc.es/rating" location="RatingService.wsdl" importType="http://schemas.xmlsoap.org/wsdl/"/>
    <import namespace="http://enterprise.netbeans.org/bpel/RewardServiceWrapper" location="RewardServiceWrapper.wsdl" importType="http://schemas.xmlsoap.org/wsdl/"/>
    <import namespace="http://rs.udc.es/reward" location="RewardService.wsdl" importType="http://schemas.xmlsoap.org/wsdl/"/>
    <import namespace="http://enterprise.netbeans.org/bpel/TelcoServiceWrapper" location="TelcoServiceWrapper.wsdl" importType="http://schemas.xmlsoap.org/wsdl/"/>
    <import namespace="http://rs.udc.es/telco" location="TelcoService.wsdl" importType="http://schemas.xmlsoap.org/wsdl/"/>
    <import namespace="http://rs.udc.es/telco" location="TelcoService_schema.xsd" importType="http://www.w3.org/2001/XMLSchema"/>
    <import namespace="http://rs.udc.es/rating" location="RatingService_schema.xsd" importType="http://www.w3.org/2001/XMLSchema"/>
    <partnerLinks>
        <partnerLink name="BillingService" xmlns:tns="http://enterprise.netbeans.org/bpel/BillingServiceWrapper" partnerLinkType="tns:BillingProviderLinkType" partnerRole="BillingProviderRole"/>
        <partnerLink name="RatingService" xmlns:tns="http://enterprise.netbeans.org/bpel/RatingServiceWrapper" partnerLinkType="tns:RatingProviderLinkType" partnerRole="RatingProviderRole"/>
        <partnerLink name="RewardService" xmlns:tns="http://enterprise.netbeans.org/bpel/RewardServiceWrapper" partnerLinkType="tns:RewardProviderLinkType" partnerRole="RewardProviderRole"/>
        <partnerLink name="TelcoService" xmlns:tns="http://enterprise.netbeans.org/bpel/TelcoServiceWrapper" partnerLinkType="tns:TelcoProviderLinkType" partnerRole="TelcoProviderRole"/>
        <partnerLink name="PartnerLinkPhoneCallSearch" xmlns:tns="http://j2ee.netbeans.org/wsdl/BPEL/src/Client" partnerLinkType="tns:Client" myRole="ClientPortTypeRole"/>
    </partnerLinks>
    <variables>
        <variable name="payOk" messageType="ns0:ClientOperationRequest"/>
        <variable name="ClientOperationOut" messageType="ns0:ClientOperationResponse"/>
        <variable name="RemovePendingPointsOut" xmlns:tns="http://rs.udc.es/reward" messageType="tns:removePendingPointsResponse"/>
        <variable name="RemovePendingPointsIn" xmlns:tns="http://rs.udc.es/reward" messageType="tns:removePendingPoints"/>
        <variable name="AddPendingPointsOut" xmlns:tns="http://rs.udc.es/reward" messageType="tns:addPendingPointsResponse"/>
        <variable name="AddPendingPointsIn" xmlns:tns="http://rs.udc.es/reward" messageType="tns:addPendingPoints"/>
        <variable name="ChangeStatusOut" messageType="ns3:changeStatusResponse"/>
        <variable name="ChangeStatusIn" messageType="ns3:changeStatus"/>
        <variable name="CostListIndex" type="xs:int"/>
        <variable name="CostList" messageType="ns4:createAndSendBill">
            <sxed:editor>
                <sxed:predicate path="$CostList.parameters/priced-call/price[$CostListIndex]" source="to"/>
            </sxed:editor>
        </variable>
        <variable name="BillReceivedNotification" messageType="ns0:ClientOperationRequest"/>
        <variable name="CreateAndSendBillOut" xmlns:tns="http://rs.udc.es/billing" messageType="tns:createAndSendBillResponse"/>
        <variable name="CreateAndSendBillIn" xmlns:tns="http://rs.udc.es/billing" messageType="tns:createAndSendBill"/>
        <variable name="GetDiscountOut" messageType="ns1:getDiscountResponse"/>
        <variable name="GetDiscountIn" messageType="ns1:getDiscount"/>
        <variable name="index" type="xs:int"/>
        <variable name="CallList" messageType="ns3:findCallsToBillResponse">
            <sxed:editor>
                <sxed:predicate path="$CallList.parameters/return[$ForEach1Counter]" source="from"/>
            </sxed:editor>
        </variable>
        <variable name="getCallsIn" xmlns:tns="http://rs.udc.es/telco" messageType="tns:findCallsToBill"/>
        <variable name="clientData" messageType="ns0:ClientOperationRequest"/>
        <variable name="ClientOperationIn" messageType="ns0:ClientOperationRequest"/>
    </variables>
    <sequence>
        <receive name="receiveClientData" createInstance="yes" partnerLink="PartnerLinkPhoneCallSearch" operation="ClientOperation" xmlns:tns="http://j2ee.netbeans.org/wsdl/BPEL/src/Client" portType="tns:ClientPortType" variable="clientData"/>
        <assign name="AssignFindCallsToBillData">
            <copy>
                <from>''</from>
                <to>$CallList.parameters/return</to>
            </copy>
            <copy>
                <from variable="clientData" part="id"/>
                <to>$getCallsIn.parameters/customerId</to>
            </copy>
            <copy>
                <from variable="clientData" part="month"/>
                <to>$getCallsIn.parameters/month</to>
            </copy>
            <copy>
                <from variable="clientData" part="year"/>
                <to>$getCallsIn.parameters/year</to>
            </copy>
            <copy>
                <from>1</from>
                <to variable="index"/>
            </copy>
            <copy>
                <from>1</from>
                <to variable="CostListIndex"/>
            </copy>
        </assign>
        <invoke name="GetCallInfoFromTelco" partnerLink="TelcoService" operation="findCallsToBill" xmlns:tns="http://rs.udc.es/telco" portType="tns:TelcoProvider" inputVariable="getCallsIn" outputVariable="CallList"/>
        <flow name="Flow1">
            <forEach name="ForEach1" parallel="no" counterName="ForEach1Counter">
                <startCounterValue>1</startCounterValue>
                <finalCounterValue>count($CallList.parameters/return)</finalCounterValue>
                <completionCondition>
                    <branches>count($CallList.parameters/return)</branches>
                </completionCondition>
                <scope name="Scope1">
                    <variables>
                        <variable name="GetPhoneCallPriceOut" messageType="ns1:getPhoneCallPriceResponse"/>
                        <variable name="GetPhoneCallPriceIn" messageType="ns1:getPhoneCallPrice"/>
                    </variables>
                    <sequence name="Sequence1">
                        <assign name="Assign1">
                            <copy>
                                <from>$CallList.parameters/return[$ForEach1Counter]/destinationNumber
                                    <sxed:editor>
                                        <sxed:predicate path="$CallList.parameters/return[$ForEach1Counter]" source="from"/>
                                    </sxed:editor>
                                </from>
                                <to>$GetPhoneCallPriceIn.parameters/phoneCall/destinationNumber</to>
                            </copy>
                            <copy>
                                <from>$CallList.parameters/return[$ForEach1Counter]/duration
                                    <sxed:editor>
                                        <sxed:predicate path="$CallList.parameters/return[$ForEach1Counter]" source="from"/>
                                    </sxed:editor>
                                </from>
                                <to>$GetPhoneCallPriceIn.parameters/phoneCall/duration</to>
                            </copy>
                            <copy>
                                <from>$CallList.parameters/return[$ForEach1Counter]/phoneCallId
                                    <sxed:editor>
                                        <sxed:predicate path="$CallList.parameters/return[$ForEach1Counter]" source="from"/>
                                    </sxed:editor>
                                </from>
                                <to>$GetPhoneCallPriceIn.parameters/phoneCall/phoneCallId</to>
                            </copy>
                            <copy>
                                <from>$CallList.parameters/return[$ForEach1Counter]/phoneCallType
                                    <sxed:editor>
                                        <sxed:predicate path="$CallList.parameters/return[$ForEach1Counter]" source="from"/>
                                    </sxed:editor>
                                </from>
                                <to>$GetPhoneCallPriceIn.parameters/phoneCall/phoneCallType</to>
                            </copy>
                            <copy>
                                <from>$CallList.parameters/return[$ForEach1Counter]/startDate
                                    <sxed:editor>
                                        <sxed:predicate path="$CallList.parameters/return[$ForEach1Counter]" source="from"/>
                                    </sxed:editor>
                                </from>
                                <to>$GetPhoneCallPriceIn.parameters/phoneCall/startDate</to>
                            </copy>
                            <copy>
                                <from>1 + $CostListIndex</from>
                                <to variable="CostListIndex"/>
                            </copy>
                        </assign>
                        <invoke name="getCostOfCall" partnerLink="RatingService" operation="getPhoneCallPrice" portType="ns1:RatingProvider" inputVariable="GetPhoneCallPriceIn" outputVariable="GetPhoneCallPriceOut"/>
                        <assign name="Assign2">
                            <copy>
                                <from>1 + $CostListIndex</from>
                                <to variable="CostListIndex"/>
                            </copy>
                            <copy>
                                <from>$GetPhoneCallPriceOut.parameters/return</from>
                                <to>$CostList.parameters/priced-call[$CostListIndex]/price
                                    <sxed:editor>
                                        <sxed:predicate path="$CostList.parameters/priced-call[$CostListIndex]" source="to"/>
                                    </sxed:editor>
                                </to>
                            </copy>
                        </assign>
                    </sequence>
                </scope>
            </forEach>
            <sequence name="FlowSequence1">
                <assign name="Assign6">
                    <copy>
                        <from variable="clientData" part="id"/>
                        <to>$GetDiscountIn.parameters/customerId</to>
                    </copy>
                    <copy>
                        <from variable="clientData" part="month"/>
                        <to>$GetDiscountIn.parameters/month</to>
                    </copy>
                    <copy>
                        <from variable="clientData" part="year"/>
                        <to>$GetDiscountIn.parameters/year</to>
                    </copy>
                </assign>
                <invoke name="getDiscount" partnerLink="RatingService" operation="getDiscount" portType="ns1:RatingProvider" inputVariable="GetDiscountIn" outputVariable="GetDiscountOut"/>
            </sequence>
        </flow>
        <assign name="AssignBillingData">
            <copy>
                <from variable="clientData" part="id"/>
                <to>$CreateAndSendBillIn.parameters/customerId</to>
            </copy>
            <copy>
                <from variable="clientData" part="month"/>
                <to>$CreateAndSendBillIn.parameters/month</to>
            </copy>
            <copy>
                <from variable="clientData" part="year"/>
                <to>$CreateAndSendBillIn.parameters/year</to>
            </copy>
            <copy>
                <from>$GetDiscountOut.parameters/return</from>
                <to>$CreateAndSendBillIn.parameters/discount</to>
            </copy>
            <copy>
                <from>$CostList.parameters/priced-call</from>
                <to>$CreateAndSendBillIn.parameters/priced-call</to>
            </copy>
        </assign>
        <invoke name="getTotalImportOfBill" partnerLink="BillingService" operation="createAndSendBill" xmlns:tns="http://rs.udc.es/billing" portType="tns:BillingProvider" inputVariable="CreateAndSendBillIn" outputVariable="CreateAndSendBillOut"/>
        <pick name="Pick1">
            <onMessage partnerLink="PartnerLinkPhoneCallSearch" operation="ClientOperation" portType="ns0:ClientPortType" variable="BillReceivedNotification"></onMessage>
        </pick>
        <assign name="AssingBilled">
            <copy>
                <from>'BILLED'</from>
                <to>$ChangeStatusIn.parameters/newPhoneCallStatus</to>
            </copy>
            <copy>
                <from variable="clientData" part="id"/>
                <to>$ChangeStatusIn.parameters/customerId</to>
            </copy>
            <copy>
                <from variable="clientData" part="month"/>
                <to>$ChangeStatusIn.parameters/month</to>
            </copy>
            <copy>
                <from variable="clientData" part="year"/>
                <to>$ChangeStatusIn.parameters/year</to>
            </copy>
        </assign>
        <invoke name="Invoke5" partnerLink="TelcoService" operation="changeStatus" portType="ns3:TelcoProvider" inputVariable="ChangeStatusIn" outputVariable="ChangeStatusOut"/>
        <assign name="AssignPoints">
            <copy>
                <from>round($CreateAndSendBillOut.parameters/return/amount div 10)</from>
                <to>$AddPendingPointsIn.parameters/points</to>
            </copy>
            <copy>
                <from variable="clientData" part="id"/>
                <to>$AddPendingPointsIn.parameters/customerId</to>
            </copy>
        </assign>
        <invoke name="Invoke6" partnerLink="RewardService" operation="addPendingPoints" xmlns:tns="http://rs.udc.es/reward" portType="tns:RewardProvider" inputVariable="AddPendingPointsIn" outputVariable="AddPendingPointsOut"/>
        <pick name="Pick2">
            <onMessage></onMessage>
        </pick>
        <receive name="Receive1"/>
        <receive name="Receive2" createInstance="no" partnerLink="PartnerLinkPhoneCallSearch" operation="ClientOperation" portType="ns0:ClientPortType" variable="payOk"/>
        <if name="If1">
            <scope name="Scope2">
                <variables>
                        <variable name="ConfirmPendingPointsOut" messageType="ns6:confirmPendingPointsResponse"/>
                            <variable name="ConfirmPendingPointsIn" messageType="ns6:confirmPendingPoints"/>
                            <variable name="ChangeStatusOut1" messageType="ns3:changeStatusResponse"/>
                            <variable name="ChangeStatusIn1" messageType="ns3:changeStatus"/>
                    </variables>
                    <sequence name="Sequence2">
                        <assign name="Assign4">
                            <copy>
                                <from>$getCallsIn.parameters/customerId</from>
                                <to>$ChangeStatusIn1.parameters/customerId</to>
                            </copy>
                            <copy>
                                <from>$getCallsIn.parameters/month</from>
                                <to>$ChangeStatusIn1.parameters/month</to>
                            </copy>
                            <copy>
                                <from>$getCallsIn.parameters/year</from>
                                <to>$ChangeStatusIn1.parameters/year</to>
                            </copy>
                            <copy>
                                <from>'PAID'</from>
                                <to>$ChangeStatusIn1.parameters/newPhoneCallStatus</to>
                            </copy>
                        </assign>
                            <invoke name="Invoke7" partnerLink="TelcoService" operation="changeStatus" portType="ns3:TelcoProvider" inputVariable="ChangeStatusIn1" outputVariable="ChangeStatusOut1"/>
                            <assign name="Assign5">
                            <copy>
                                <from>$AddPendingPointsIn.parameters/points</from>
                                <to>$ConfirmPendingPointsIn.parameters/points</to>
                            </copy>
                            <copy>
                                <from>$AddPendingPointsIn.parameters/customerId</from>
                                <to>$ConfirmPendingPointsIn.parameters/customerId</to>
                            </copy>
                        </assign>
                            <invoke name="Invoke8" partnerLink="RewardService" operation="confirmPendingPoints" portType="ns6:RewardProvider" inputVariable="ConfirmPendingPointsIn" outputVariable="ConfirmPendingPointsOut"/>
                    </sequence>
            </scope>
            <else>
                <sequence name="FlowSequence">
                    <assign name="Assign3">
                            <copy>
                                    <from>$AddPendingPointsIn.parameters/customerId</from>
                                        <to>$RemovePendingPointsIn.parameters/customertId</to>
                                </copy>
                                <copy>
                                    <from>$AddPendingPointsIn.parameters/points</from>
                                        <to>$RemovePendingPointsIn.parameters/points</to>
                                </copy>
                        </assign>
                        <invoke name="removePoints" partnerLink="RewardService" operation="removePendingPoints" portType="ns6:RewardProvider" inputVariable="RemovePendingPointsIn" outputVariable="RemovePendingPointsOut"/>
                </sequence>
            </else>
        </if>
        <reply name="Reply1" partnerLink="PartnerLinkPhoneCallSearch" operation="ClientOperation" portType="ns0:ClientPortType" variable="ClientOperationOut"/>
    </sequence>
</process>
